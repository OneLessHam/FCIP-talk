<div class="span10 offset1">
	<h3>Here's what is available:</h3>
	<div class="accordion">
		{{#each topics}}
			<div class="accordion-group" data-title="{{ title }}">
				<div class="accordion-heading">
					<div class="accordion-toggle" data-toggle="collapse"
							data-target="#{{ key }}">
						<strong class="topic-title">{{ title }}</strong>
					</div>
				</div>
				<div id="{{ key }}" class="accordion-body collapse">
					<div class="accordion-inner">
					<textarea style="width: 100%" rows="20" />
					</div>
				</div>
			</div>
		{{/each}}
	</div>
	<button class="btn createTopic">New Topic</button>

	<div class="modal hide fade createPrompt">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">x</button>
			<h3>Enter the topic name</h3>
		</div>
		<div class="modal-body">
			<form class="form-horizontal">
				<div class="control-group">
					<input type="text" class="topicName" placeholder="Topic name" />
				</div>
			</form>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Cancel</a>
			<a href="#" class="btn btn-primary" data-dismiss="modal">OK</a>
		</div>
	</div>
</div>
